#:import Window kivy.core.window.Window
#:set bg_color [1,1,1,1]

<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        Label:
            text: "BaguncArt - Login"
            font_size: '28sp'
            size_hint_y: None
            height: '50dp'

        TextInput:
            id: cnpj_input
            hint_text: "CNPJ"
            multiline: False

        TextInput:
            id: senha_input
            hint_text: "Senha"
            password: True
            multiline: False

        Button:
            text: "Entrar"
            size_hint_y: None
            height: '50dp'
            on_press: root.do_login()

<MenuScreen>:
    name: "menu"
    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        Label:
            text: "Menu Principal"
            font_size: '28sp'

        Button:
            text: "Clientes"
            on_press: app.root.current = 'clientes'

        Button:
            text: "Contratos"
            on_press: app.root.current = 'contratos'

        Button:
            text: "Serviços"
            on_press: app.root.current = 'servicos'

        Button:
            text: "Promoções"
            on_press: app.root.current = 'promocoes'

        Button:
            text: "Sair"
            on_press: app.root.current = 'login'

<ClientesScreen>:
    name: "clientes"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Clientes"
            font_size: '24sp'

        ScrollView:
            BoxLayout:
                id: clientes_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

        Button:
            text: "Novo Cliente"
            size_hint_y: None
            height: '50dp'
            on_press: app.root.current = 'cadastro_cliente'

        Button:
            text: "Voltar"
            size_hint_y: None
            height: '50dp'
            on_press: app.root.current = 'menu'

<CadastroClienteScreen>:
    name: "cadastro_cliente"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Cadastro de Cliente"
            font_size: '24sp'

        TextInput:
            id: nome_input
            hint_text: "Nome completo"

        TextInput:
            id: cpf_input
            hint_text: "CPF"

        TextInput:
            id: telefone_input
            hint_text: "Telefone"

        TextInput:
            id: email_input
            hint_text: "Email"

        TextInput:
            id: endereco_input
            hint_text: "Endereço"

        TextInput:
            id: senha_input
            hint_text: "Senha (app cliente)"
            password: True

        Button:
            text: "Salvar"
            on_press: root.salvar_cliente()

        Button:
            text: "Voltar"
            on_press: app.root.current = 'clientes'

